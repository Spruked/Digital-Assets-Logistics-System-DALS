{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "shim_advisory": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "enum": ["shim_v1.1_spherical"]
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "asset_id": {
          "type": "string",
          "pattern": "^DAL-\\d{4}-\\d{2}-\\d{3}$"
        },
        "claim": {
          "type": "string"
        },
        "shim_score": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        },
        "verdict": {
          "type": "string",
          "enum": ["HIGH_SUPPORT", "MODERATE", "LOW", "CONFLICT"]
        },
        "confidence_band": {
          "type": "string",
          "enum": ["NARROW", "WIDE"]
        },
        "evidence_weighting": {
          "type": "object",
          "additionalProperties": {
            "type": "number",
            "minimum": 0.0,
            "maximum": 1.0
          }
        },
        "explanation": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "advisory_mode": {
          "type": "boolean",
          "const": true
        },
        "enforcement": {
          "type": "string",
          "const": "NONE"
        },
        "recommended_action": {
          "type": "string"
        },
        "audit_trace_id": {
          "type": "string",
          "pattern": "^SHIM-ADV-\\d{4}-\\d{2}-\\d{2}-\\d{3}$"
        }
      },
      "required": [
        "version",
        "timestamp",
        "asset_id",
        "claim",
        "shim_score",
        "verdict",
        "confidence_band",
        "evidence_weighting",
        "explanation",
        "advisory_mode",
        "enforcement",
        "recommended_action",
        "audit_trace_id"
      ]
    },
    "dals_final_decision": {
      "type": "null"
    }
  },
  "required": ["shim_advisory", "dals_final_decision"]
}